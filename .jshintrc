{
  "node": true,
  "esnext": true,
  "bitwise": true,
  "camelcase": false,
  "curly": true,
  "eqeqeq": true,
  "immed": true,
  "indent": 2,
  "latedef": true,
  "newcap": true,
  "noarg": true,
  "quotmark": false, /*necessary because JSX transpiles to JS using double quotes*/
  "regexp": true,
  "undef": true,
  "unused": true,
  "strict": false,
  "trailing": true,
  "smarttabs": true,
  "white": true,
  "globals": {
    "describe": false,
    "beforeEach": false,
    "it": false,
    "pit": false,
    "document": false,
    /*Globals exposed to unit tests */
    "expect": false,
    "React": false,
    "TestUtils": false
  }
}
